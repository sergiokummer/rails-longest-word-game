<div class="container">
  <h1>New game</h1>
  <div class="row">
    <% @letters.each do |letter| %>
      <span class="col-1 source"><%= letter %></span>
    <% end %>
  </div>
  <div class="user-input">
    <p>What is the longest word you can find?</p>
    <form action=/score class="form-inline" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <div class="input-group mb-3">
        <input type="text" name="word" class="form-control"id="dest">
        <div class="input-group-append">
          <input type="submit" value="Play" class="btn btn-outline-danger">
        </div>
    </form>
  </div>
</div>
